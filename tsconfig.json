{
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "~/Shared/*": ["Shared/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/jest"]
  },
  "include": ["**/*.ts"]
}
